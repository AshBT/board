<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 col-lg-offset-4 col-md-offset-4 col-sm-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading lead">
			<%- i18next.t("Add User") %>
		</div>
		<div class="panel-body well-lg">

			<form class="form-horizontal clearfix pull-left js-user-profile-edit" role="form" enctype="multipart/form-data" id="js-user-profile-edit">
				<div class="form-group">
					<label for="inputFullName" class="col-sm-4 control-label"><%- i18next.t("Full Name") %></label>
					<div class="col-sm-8">
						<input type="text" id="inputFullName" class="form-control" name="full_name" maxlength="50">
					</div>
				</div>
				<div class="form-group">
					<label for="AboutMe" class="col-sm-4 control-label"><%- i18next.t("About Me") %></label>
					<div class="col-sm-8">
						<textarea class="form-control" id="AboutMe" rows="6" name="about_me"></textarea>
					</div>
				</div>
				<div class="form-group required">
					<label for="inputemail" class="col-sm-4 control-label"><%- i18next.t("Email") %></label>
					<div class="col-sm-8">
						<input type="email" id="inputemail" class="form-control" name="email" required>
					</div>
				</div>
				<div class="form-group required">
					<label for="inputusername" class="col-sm-4 control-label"><%- i18next.t("Username") %></label>
					<div class="col-sm-8">
						<input type="text" id="inputusername" class="form-control" name="username" pattern="^[a-zA-Z0-9]{2,15}$" title="<%- i18next.t('Username. Minimum 3 characters and Maximum 15 characters and spaces not allowed') %>">
					</div>
				</div>
				<div class="form-group required">
					<label for="inputinitials" class="col-sm-4 control-label"><%- i18next.t("Initials") %></label>
					<div class="col-sm-8">
						<input type="text" id="inputinitials" class="form-control initialism" name="initials" maxlength="2" required>
					</div>
				</div>
				<div class="form-group required">
					<label for="inputtimezone" class="col-sm-4 control-label"><%- i18next.t("Timezone") %></label>
					<div class="col-sm-8">
						<%
							user_timezone = SITE_TIMEZONE;
						%>
						<select  id="inputtimezone" class="js-chosen-select form-control" name="timezone">
							<% _.each(user.attributes.timezones, function(timezone) { %>
									<% if(user_timezone.toString() == timezone.code.toString()) { %> 
									<option selected value="<%- timezone.code %>"><%- timezone.name %></option>
								<% } else { %>
									<option value="<%- timezone.code %>"><%- timezone.name %></option>
								<% } %>
							<% }); %>
						</select>
					</div>
				</div>
				
				<div class="form-group" id="dropzone" data-mode="1">
					<label for="inputAttachment" class="col-sm-4 control-label sr-only"><%- i18next.t("Upload Avatar") %></label>
					<div class="col-xs-8">
						<a data-placement="bottom" title="Upload Avatar" data-toggle="tooltip" href="#" class="avatar-option js-use-uploaded-avatar drag-box navbar-left"> 
								<i class="avatar avatar-color-194 avatar-md img-rounded"></i>		
						</a>
						<span class="clearfix navbar-btn"><span id="dropzone-cssloader" ></span></span>
					<div class="clearfix" id="manager-area"></div>
					</div>
				</div>
				<fieldset>
					<legend><span class="show h4"><%- i18next.t('Notifications') %></span></legend>
					<fieldset class="col-sm-offset-1 well-sm">
						<legend><span class="show h4"><%- i18next.t('Email Notification') %></span></legend>
						<div class="form-group">
							<label for="is_send_newsletter" class="col-sm-3 control-label"><%- i18next.t("Email Notification") %></label>
							<div class="col-sm-8">
								<select  id="is_send_newsletter" class="js-chosen-select" name="is_send_newsletter">
									<option value="0"><%- i18next.t("Never, Don't send email notifications") %></option>
									<option value="1"><%- i18next.t("Periodically, Send email notification every 1 hour") %></option>
									<option value="2"><%- i18next.t("Instantly, Send email notification every 5 minutes") %></option>
								</select>
							</div>
						</div>
					</fieldset>
				</fieldset>
				<div class="col-xs-9 pull-right clearfix">
					<div class="form-group">
						<label for="submit2" class="col-sm-1 control-label sr-only"><%- i18next.t("Submit") %></label>
						<input type="submit" value="<%- i18next.t('Submit') %>" id="submit2" class="btn btn-primary btn-lg">
					</div>
				</div>
			</form>
